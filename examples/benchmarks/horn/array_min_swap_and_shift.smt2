(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (i Int) (k Int) (N Int))
  (=> (and (>= i 0) (< k 0)) (inv a i (+ i 1) k N))))
(assert (forall ((a (Array Int Int))
         (j Int)
         (a1 (Array Int Int))
         (i Int)
         (j1 Int)
         (k Int)
         (N Int))
  (let ((a!1 (store (store a i (+ (select a j) k)) j (select a i))))
  (let ((a!2 (= a1 (ite (>= (select a i) (select a j)) a!1 a))))
    (=> (and (inv a i j k N) (< j N) a!2 (= j1 (+ j 1))) (inv a1 i j1 k N))))))
(assert (forall ((k Int) (j Int) (N Int) (i Int) (a (Array Int Int)) (i1 Int))
  (let ((a!1 (and (inv a i j k N)
                  (>= j N)
                  (< i i1)
                  (< i1 N)
                  (not (< (select a i) (select a i1))))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
