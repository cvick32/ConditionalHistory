(assert (forall ((a (Array Int Int))
         (i Int)
         (a1 (Array Int Int))
         (i1 Int)
         (val Int)
         (N Int))
  (let ((a!1 (and (inv a i val N)
                  (<= i N)
                  (= a1 (ite (= val i) (store a i 0) (store a i i)))
                  (= i1 (+ i 1)))))
    (=> a!1 (inv a1 i1 val N)))))
