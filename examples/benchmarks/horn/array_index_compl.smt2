(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (N Int)) (inv (store a 0 1) 0 N)))
(assert (forall ((a (Array Int Int)) (i Int) (a1 (Array Int Int)) (i1 Int) (N Int))
  (let ((a!1 (= a1 (store a (+ i 1) (+ 1 (select a i))))))
    (=> (and (inv a i N) (< i N) a!1 (= i1 (select a i))) (inv a1 i1 N)))))
(assert (forall ((a (Array Int Int)) (N Int) (i Int))
  (=> (and (inv a i N) (< i 0)) fail)))
(assert (not fail))
(check-sat)
