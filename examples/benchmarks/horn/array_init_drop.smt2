(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (N Int)) (! (inv (store a 0 0) 0 N) :weight 0)))
(assert (forall ((a (Array Int Int)) (i Int) (a1 (Array Int Int)) (i1 Int) (N Int))
  (! (let ((a!1 (store a i (- (select a (- i 1)) 1))))
     (let ((a!2 (= a1 (ite (= (select a i) i) (store a i i) a!1))))
       (=> (and (inv a i N) (< i N) a!2 (= i1 (+ i 1))) (inv a1 i1 N))))
     :weight 0)))
(assert (forall ((i Int) (N Int) (a (Array Int Int)) (i1 Int))
  (! (let ((a!1 (and (inv a i N)
                     (>= i N)
                     (<= 0 i1)
                     (< i1 N)
                     (not (<= (select a i1) i1)))))
       (=> a!1 fail))
     :weight 0)))
(assert (not fail))
(check-sat)
