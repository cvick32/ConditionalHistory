(set-logic HORN)
(declare-fun inv1 ((Array Int Int) (Array Int Int) Int Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (b (Array Int Int)) (N Int)) (inv1 a b 0 N 0)))
(assert (forall ((k Int)
         (b (Array Int Int))
         (i Int)
         (a (Array Int Int))
         (b1 (Array Int Int))
         (i1 Int)
         (N Int)
         (k1 Int))
  (let ((a!1 (= k1 (ite (>= 0 (select a i)) (+ k 1) k)))
        (a!2 (= b1 (ite (>= 0 (select a i)) (store b k (select a i)) b))))
    (=> (and (inv1 a b i N k) (< i N) a!1 a!2 (= i1 (+ i 1)))
        (inv1 a b1 i1 N k1)))))
(assert (forall ((a (Array Int Int))
         (i Int)
         (N Int)
         (k Int)
         (b (Array Int Int))
         (i1 Int))
  (let ((a!1 (and (inv1 a b i N k)
                  (>= i N)
                  (<= 0 i1)
                  (< i1 k)
                  (not (>= 0 (select b i1))))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
