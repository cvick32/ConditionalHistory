(set-logic HORN)
(declare-fun inv
             ((Array Int Int) (Array Int Int) (Array Int Int) Int Int Int)
             Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (b (Array Int Int)) (c (Array Int Int)) (N Int))
  (! (inv a b c 0 1 N) :weight 0)))
(assert (forall ((c (Array Int Int))
         (i Int)
         (a (Array Int Int))
         (b (Array Int Int))
         (c1 (Array Int Int))
         (x Int)
         (i1 Int)
         (N Int))
  (! (let ((a!1 (ite (< i 500) c (store c i (+ x (select a i) (select b i))))))
       (=> (and (inv a b c x i N) (< i N) (= c1 a!1) (= i1 (+ i 1)))
           (inv a b c1 x i1 N)))
     :weight 0)))
(assert (forall ((x Int)
         (i Int)
         (N Int)
         (c (Array Int Int))
         (a (Array Int Int))
         (b (Array Int Int))
         (i1 Int))
  (! (let ((a!1 (not (= (select c i1) (+ (select a i1) (select b i1))))))
       (=> (and (inv a b c x i N) (>= i N) (<= 500 i1) (< i1 N) a!1) fail))
     :weight 0)))
(assert (not fail))
(check-sat)
