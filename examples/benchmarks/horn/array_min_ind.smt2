(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int))) (inv a 0 0)))
(assert (forall ((m Int) (i Int) (a (Array Int Int)) (i1 Int) (m1 Int))
  (let ((a!1 (= m1 (ite (<= m (select a i)) m (select a i)))))
    (=> (and (inv a i m) a!1 (= i1 (+ i 1))) (inv a i1 m1)))))
(assert (forall ((i Int) (m Int) (a (Array Int Int)) (i1 Int))
  (let ((a!1 (and (inv a i m) (< 0 i1) (< i1 i) (not (<= m (select a i1))))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
