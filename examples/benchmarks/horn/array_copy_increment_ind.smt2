(set-logic HORN)
(declare-fun inv ((Array Int Int) (Array Int Int) Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (b (Array Int Int))) (inv a b 0)))
(assert (forall ((b (Array Int Int))
         (i Int)
         (a (Array Int Int))
         (b1 (Array Int Int))
         (i1 Int))
  (let ((a!1 (= (store b i (+ 1 (select a i))) b1)))
    (=> (and (inv a b i) a!1 (= i1 (+ i 1))) (inv a b1 i1)))))
(assert (forall ((i Int) (a (Array Int Int)) (b (Array Int Int)) (i1 Int))
  (let ((a!1 (and (inv a b i)
                  (< 0 i1)
                  (< i1 i)
                  (not (< (select a i1) (select b i1))))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
