(set-logic HORN)
(declare-fun inv ((Array Int Int) (Array Int Int) Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (b (Array Int Int)) (n Int)) (inv a b 0 n)))
(assert (forall ((b (Array Int Int))
         (i Int)
         (a (Array Int Int))
         (b1 (Array Int Int))
         (i1 Int)
         (n Int))
  (let ((a!1 (= (store b i (select a (- n i1))) b1)))
    (=> (and (inv a b i n) (< i n) a!1 (= i1 (+ i 1))) (inv a b1 i1 n)))))
(assert (forall ((i Int) (a (Array Int Int)) (b (Array Int Int)) (n Int) (i1 Int))
  (let ((a!1 (= (select a i1) (select b (- (- n i1) 1)))))
    (=> (and (inv a b i n) (>= i n) (<= 0 i1) (< i1 n) (not a!1)) fail))))
(assert (not fail))
(check-sat)
