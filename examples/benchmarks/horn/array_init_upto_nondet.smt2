(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (n Int) (k Int))
  (=> (and (<= 0 k) (< k n)) (inv a 0 n k))))
(assert (forall ((a (Array Int Int))
         (i Int)
         (a1 (Array Int Int))
         (i1 Int)
         (n Int)
         (k Int))
  (let ((a!1 (and (inv a i n k)
                  (< i n)
                  (= (ite (< i k) (store a i i) a) a1)
                  (= i1 (+ i 1)))))
    (=> a!1 (inv a1 i1 n k)))))
(assert (forall ((i Int) (n Int) (k Int) (a (Array Int Int)) (i1 Int))
  (let ((a!1 (and (inv a i n k)
                  (>= i n)
                  (<= 0 i1)
                  (< i1 n)
                  (< i1 k)
                  (not (= (select a i1) i1)))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
