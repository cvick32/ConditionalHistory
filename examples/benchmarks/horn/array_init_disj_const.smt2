(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int))) (! (inv a 0 100000) :weight 0)))
(assert (forall ((bool Bool)
         (a (Array Int Int))
         (i Int)
         (a1 (Array Int Int))
         (i1 Int)
         (N Int))
  (! (let ((a!1 (and (inv a i N)
                     (< i N)
                     (= a1 (ite bool (store a i 0) (store a i 2)))
                     (= i1 (+ i 1)))))
       (=> a!1 (inv a1 i1 N)))
     :weight 0)))
(assert (forall ((i Int) (N Int) (a (Array Int Int)) (i1 Int))
  (! (=> (and (inv a i N) (>= i N) (< 0 i1) (< i1 N) (= (select a i1) 1)) fail)
     :weight 0)))
(assert (not fail))
(check-sat)
