(declare-fun inv ((Array Int Int) Int Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (N Int)) (! (inv a 54 0 N) :weight 0)))
(assert (forall ((y Int)
         (a (Array Int Int))
         (i Int)
         (a1 (Array Int Int))
         (y1 Int)
         (i1 Int)
         (N Int))
  (! (let ((a!1 (ite (<= i 55) (store a i i) (store a i (select a (- i 1))))))
     (let ((a!2 (and (inv a y i N)
                     (< i N)
                     (= y1 (ite (<= i 55) y (- y 1)))
                     (= a1 a!1)
                     (= i1 (+ i 1)))))
       (=> a!2 (inv a1 y1 i1 N))))
     :weight 0)))
(assert (forall ((i Int) (N Int) (y Int) (a (Array Int Int)) (i1 Int))
  (! (let ((a!1 (and (inv a y i N)
                     (>= i N)
                     (< 55 i1)
                     (< i1 N)
                     (not (< y (select a i1))))))
       (=> a!1 fail))
     :weight 0)))
