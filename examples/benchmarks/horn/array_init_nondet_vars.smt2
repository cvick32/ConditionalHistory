(set-logic HORN)
(declare-fun inv ((Array Int Int) Int Int Int) Bool)
(declare-fun fail () Bool)
(assert (forall ((a (Array Int Int)) (j Int) (n Int)) (=> (> j 0) (inv a 1 j n))))
(assert (forall ((a (Array Int Int))
         (k Int)
         (i Int)
         (a1 (Array Int Int))
         (i1 Int)
         (j Int)
         (n Int))
  (let ((a!1 (and (inv a i j n)
                  (< i n)
                  (> k 0)
                  (= (store a i (+ i j k)) a1)
                  (= i1 (+ i 1)))))
    (=> a!1 (inv a1 i1 j n)))))
(assert (forall ((j Int) (i Int) (n Int) (a (Array Int Int)) (i1 Int))
  (let ((a!1 (and (inv a i j n)
                  (>= i n)
                  (< 0 i1)
                  (< i1 n)
                  (not (>= (select a i1) (+ 2 i1))))))
    (=> a!1 fail))))
(assert (not fail))
(check-sat)
