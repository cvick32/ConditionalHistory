         (acopy1 (Array Int Int))
         (i Int)
         (a (Array Int Int))
         (acopy2 (Array Int Int))
         (i1 Int)
         (S Int))
  (let ((a!1 (store acopy (- (* 2 S) (+ i 1)) (select a (- (* 2 S) (+ i 1))))))
  (let ((a!2 (and (inv a acopy i S)
                  (< i S)
                  (= a!1 acopy1)
                  (= (store acopy1 i (select a i)) acopy2)
                  (= i1 (+ i 1)))))
    (=> a!2 (inv a acopy2 i1 S))))))
