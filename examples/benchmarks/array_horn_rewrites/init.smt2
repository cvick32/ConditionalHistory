(declare-var A (Array Int Int))
(declare-var C Int)
(declare-var I Int)
(declare-var N Int)
(declare-var Q Int)
(declare-var A1 (Array Int Int))
(declare-var I1 Int)
(declare-var pc Int)
(declare-var Z Int)

(rule (=> (and
           (= I 0)
           (= pc 1)
           ) (inv A C I N Q pc)))
(rule (=> (and
           (= A1 (store A I C))
           (= I1 (+ I 1))
           (inv A C I N Q pc)
           (< I N)
           (= pc 1)
           (= pc1 1)
           (= C C1))
          (inv A1 C1 I1 N Q pc1)))

(rule (=> (and
           (= I1 0)
           (inv A C I N Q pc)
           (>= I N)
           (= pc 1)
           (= pc1 2)
           (= C C1)
           ) (inv A C 1I1 N Q pc1)))
(rule (=> (and
           (= I1 (+ I 1))
           (inv A C I N Q pc)
           (< I N)
           (= pc 2)
           (= pc1 2)
           (= C C1)
           ) (inv A C1 I1 N Q pc1)))
(rule (=> (and
           (inv A C I N Q pc)
           (= pc 2)
           (< Z N)
           (>= Z 0)
           (not (= (select A Z) C))
           ) fail))
